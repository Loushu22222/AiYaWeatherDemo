<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/cicle"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细信息"
            android:textColor="@color/tv_white"
            android:textSize="20sp"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ec07cd"/>
        

        <RelativeLayout
            android:paddingLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天气"
                android:textColor="@color/tv_white"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多云"
                android:id="@+id/fg2_tv_info"
                android:layout_alignParentRight="true"
                android:textColor="@color/tv_white"
                android:textSize="20sp"/>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:background="#ec07cd"/>

        <RelativeLayout
            android:paddingLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体感温度"
                android:textColor="@color/tv_white"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23℃"
                android:id="@+id/fg2_tv_temperature"
                android:layout_alignParentRight="true"
                android:textColor="@color/tv_white"
                android:textSize="20sp"/>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:background="#ec07cd"/>


        <RelativeLayout
            android:paddingLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="湿度"
                android:textColor="@color/tv_white"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75%"
                android:id="@+id/fg2_tv_humidity"
                android:layout_alignParentRight="true"
                android:textColor="@color/tv_white"
                android:textSize="20sp"/>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:background="#ec07cd"/>

        <RelativeLayout
            android:paddingLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期五"
                android:id="@+id/fg2_tv_week"
                android:textColor="@color/tv_white"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五月十七"
                android:id="@+id/fg2_tv_moon"
                android:layout_alignParentRight="true"
                android:textColor="@color/tv_white"
                android:textSize="20sp"/>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:background="#ec07cd"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/cicle"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生活信息"
            android:textColor="@color/tv_white"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ec07cd"/>


        <RelativeLayout
            android:paddingLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空调"
                android:textColor="@color/tv_white"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fg2_tv_kongtiao"
                android:text="部分时间开启"
                android:layout_alignParentRight="true"
                android:textColor="@color/tv_white"
                android:textSize="20sp"/>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:background="#ec07cd"/>

        <RelativeLayout
            android:paddingLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运动"
                android:textColor="@color/tv_white"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="较不宜"
                android:id="@+id/fg2_tv_yundong"
                android:layout_alignParentRight="true"
                android:textColor="@color/tv_white"
                android:textSize="20sp"/>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:background="#ec07cd"/>


        <RelativeLayout
            android:paddingLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="紫外线"
                android:textColor="@color/tv_white"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="弱"
                android:id="@+id/fg2_tv_ziwaixian"
                android:layout_alignParentRight="true"
                android:textColor="@color/tv_white"
                android:textSize="20sp"/>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:background="#ec07cd"/>

        <RelativeLayout
            android:paddingLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="洗车"
                android:textColor="@color/tv_white"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不宜"
                android:id="@+id/fg2_tv_xiche"
                android:layout_alignParentRight="true"
                android:textColor="@color/tv_white"
                android:textSize="20sp"/>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:background="#ec07cd"/>


        <RelativeLayout
            android:paddingLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="穿衣"
                android:textColor="@color/tv_white"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="炎热"
                android:id="@+id/fg2_tv_chuanyi"
                android:layout_alignParentRight="true"
                android:textColor="@color/tv_white"
                android:textSize="20sp"/>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:background="#ec07cd"/>


    </LinearLayout>
    
    
  

</LinearLayout>
