<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/item_tv_color"
        android:layout_height="wrap_content"
        android:id="@+id/item_tv_date"
        android:text="06-20"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/item_tv_week"
        android:textColor="@color/item_tv_color"
        android:layout_height="wrap_content"
        android:text="星期一"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/item_tv_color"
        android:id="@+id/item_tv_nongli"
        android:layout_height="wrap_content"
        android:text="五月十七"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/item_tv_day"
        android:textColor="@color/item_tv_color"
        android:layout_height="wrap_content"
        android:text="29"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/item_tv_color"
        android:id="@+id/item_tv_night"
        android:layout_height="wrap_content"
        android:text="23"/>

</LinearLayout>
